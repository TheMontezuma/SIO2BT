<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    
    <include android:id="@+id/disklayout_0" layout="@layout/disk_item" />
    <include android:id="@+id/disklayout_1" layout="@layout/disk_item" />
    <include android:id="@+id/disklayout_2" layout="@layout/disk_item" />
    <include android:id="@+id/disklayout_3" layout="@layout/disk_item" />

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
	android:paddingLeft="4dp"
	android:paddingRight="4dp"
    >

    <ImageView
        android:id="@+id/network_icon"
        android:src="@drawable/network_off"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:ignore="ContentDescription" />
    
    <Button
	    android:id="@+id/buttonSwap"
	    android:layout_weight="1"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:text="D1 &lt; D2 &lt; D3 &lt; D4"
	    android:textSize="22sp"
	    tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/menu_icon"
        android:src="@drawable/ic_menu_more"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:ignore="ContentDescription" />
    
</LinearLayout>
</LinearLayout>

